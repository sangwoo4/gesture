<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
 >

    <!-- 헤더 영역 -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:background="@drawable/header_background"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 상단 바: 뒤로가기 + 제목 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">

            <!-- 뒤로가기 버튼 -->
            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="29dp"
                android:layout_height="26dp"
                android:layout_gravity="start"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/backicon"
                android:contentDescription="뒤로가기" />

            <!-- 제목 -->
            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="사용자 제스처 등록"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/white" />
        </FrameLayout>

        <!-- 설명 문구 -->
        <TextView
            android:id="@+id/descriptionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="프레임 안에 제스처를 취한 후, 등록 버튼을 누르세요.\n지시사항에 따라 등록을 완료하세요."
            android:textSize="10sp"
            android:textColor="#777777"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <!-- 아래 내용 영역 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="16dp">

            <!-- 상태 메시지 -->
            <TextView
                android:id="@+id/statusMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="프레임 안에 제스처를 유지해주세요."
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="#D08855"
                android:gravity="center"
                android:layout_marginTop="24dp"
                android:paddingBottom="10dp" />

            <!-- 진행상태 바 -->
            <com.daimajia.numberprogressbar.NumberProgressBar
                android:id="@+id/number_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                custom:progress_unreached_color="#CCC9C9"
                custom:progress_reached_color="#1A409B"
                custom:progress_unreached_bar_height="3dp"
                custom:progress_reached_bar_height="5dp"
                custom:progress_text_color="#10278C"
                app:progress_text_size="16sp" />

            <!-- 카메라 프레임 -->
            <FrameLayout
                android:id="@+id/cameraPreviewFrame"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:background="@drawable/circle_mask"
                android:clipToOutline="true"
                android:layout_marginTop="30dp"
                android:layout_gravity="center">

                <!-- Percentage Chart View-->

                <SurfaceView
                    android:id="@+id/cameraPreview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


                <androidx.compose.ui.platform.ComposeView
                    android:id="@+id/landmarkOverlay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent" >



<!--                    <com.mikhaellopez.circularprogressbar.CircularProgressBar-->
<!--                        android:id="@+id/circle_progress"-->
<!--                        android:layout_width="350dp"-->
<!--                        android:layout_height="350dp"-->
<!--                        android:layout_gravity="center"-->
<!--                        app:cpb_background_progressbar_color="#0E96D0"-->
<!--                        app:cpb_background_progressbar_width="30dp"-->
<!--                        app:cpb_start_angle="90"-->
<!--                        app:cpb_progress_direction="to_right"-->
<!--                        app:cpb_progressbar_color="#3f51b5"-->
<!--                        app:cpb_progressbar_width="20dp"-->
<!--                        app:cpb_round_border="true" />-->

                </androidx.compose.ui.platform.ComposeView>

                <!-- ✅ FABProgressCircle: 카메라 프레임과 겹치게 추가 -->
                <com.github.jorgecastilloprz.FABProgressCircle
                    android:id="@+id/fabProgressCircle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@mipmap/ic_intro_icon"
                        app:rippleColor="@color/black"
                        app:elevation="5dp"
                        app:borderWidth="0dp" />
                </com.github.jorgecastilloprz.FABProgressCircle>
            </FrameLayout>


            <!-- 버튼 영역 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp">

                <Button
                    android:id="@+id/retakeButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="다시촬영"
                    android:textSize="15sp"
                    android:background="@drawable/rounded_box"
                    android:textColor="@android:color/black"
                    app:backgroundTint="@null"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/saveButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="저장하기"
                    android:textSize="15sp"
                    android:background="@drawable/rounded_box"
                    android:textColor="@android:color/black"
                    app:backgroundTint="@null"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
