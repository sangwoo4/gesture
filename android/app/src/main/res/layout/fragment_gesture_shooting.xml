<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="20dp" >

    <!-- 뒤로가기 버튼 -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="29dp"
        android:layout_height="26dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/backicon"
        android:contentDescription="뒤로가기"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 제목 -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="사용자 제스처 등록"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toEndOf="@id/backButton"
        app:layout_constraintTop_toTopOf="@id/backButton"
        app:layout_constraintEnd_toStartOf="@id/editButton"
        app:layout_constraintBottom_toBottomOf="@id/backButton"
        app:layout_constraintHorizontal_bias="0" />

    <!-- 편집 버튼 -->
    <TextView
        android:id="@+id/editButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="편집"
        android:textColor="@android:color/black"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/titleText"
        app:layout_constraintBottom_toBottomOf="@id/titleText"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 설명 문구 -->
    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="프레임 안에 제스처를 취한 후, 등록 버튼을 누르세요.\n지시사항에 따라 등록을 완료하세요."
        android:textSize="10sp"
        android:textColor="#777777"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 상태 메시지 -->
    <TextView
        android:id="@+id/statusMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="프레임 안에 제스처를 유지해주세요."
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="#D08855"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/descriptionText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <!-- 진행상태 바 -->
    <com.daimajia.numberprogressbar.NumberProgressBar
        android:id="@+id/number_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/statusMessage"
        app:layout_constraintBottom_toTopOf="@id/cameraPreviewFrame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        custom:progress_unreached_color="#CCC9C9"
        custom:progress_reached_color="#1A409B"

        custom:progress_unreached_bar_height="3dp"
        custom:progress_reached_bar_height="5dp"
        custom:progress_text_color="#10278C"

        android:padding="10dp"
        app:progress_text_size="16sp"
        />


    <!-- 카메라 프리뷰 프레임 -->
    <FrameLayout
        android:id="@+id/cameraPreviewFrame"
        android:layout_width="400dp"
        android:layout_height="450dp"
        android:background="@android:color/white"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/statusMessage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 카메라 프리뷰를 여기에 렌더링 -->
        <SurfaceView
            android:id="@+id/cameraPreview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- 카메라 활성화 시 중앙 점선 가이드 -->
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/dotted_line_vertical" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/dotted_line_horizontal" />

        <!-- 🖌 Compose 기반 랜드마크 오버레이 (추가됨) -->
        <androidx.compose.ui.platform.ComposeView
            android:id="@+id/landmarkOverlay"
            android:layout_width="400dp"
            android:layout_height="450dp"
            android:layout_gravity="center"
            android:background="@android:color/transparent" />

    </FrameLayout>


    <!-- 다시촬영 버튼 -->
    <Button
        android:id="@+id/retakeButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="다시촬영"
        android:textSize="15sp"
        android:background="@drawable/rounded_box"
        android:textColor="@android:color/black"
        app:backgroundTint="@null"
        app:layout_constraintTop_toBottomOf="@id/cameraPreviewFrame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/saveButton"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp" />


    <!-- 저장하기 버튼 -->
    <Button
        android:id="@+id/saveButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="저장하기"
        android:textSize="15sp"
        android:background="@drawable/rounded_box"
        android:textColor="@android:color/black"
        app:backgroundTint="@null"
        app:layout_constraintTop_toTopOf="@id/retakeButton"
        app:layout_constraintStart_toEndOf="@id/retakeButton"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
