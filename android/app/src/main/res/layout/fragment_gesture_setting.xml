<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- 헤더 영역 -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:background="@drawable/header_background"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 상단 바: 뒤로가기 + 제목 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">

            <!-- 뒤로가기 버튼 -->
            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="29dp"
                android:layout_height="26dp"
                android:layout_gravity="start"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/backicon"
                android:contentDescription="뒤로가기" />

            <!-- 제목 -->
            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="제스처 기능 설정"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/white" />
        </FrameLayout>

        <!-- 설명 문구 -->
        <TextView
            android:id="@+id/descriptionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오프라인 상태에서 사용할 제스처를 골라주세요."
            android:textSize="10sp"
            android:textColor="#777777"
            android:layout_marginTop="8dp"/>
    </LinearLayout>


    <!-- 아래 내용 영역 -->
    <ScrollView
        android:id="@+id/bodyScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">


            <!-- 설치됨 레이블 -->
            <TextView
                android:id="@+id/installedLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="제스처 목록"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp" />

            <!-- PAPER -->
            <LinearLayout
                android:id="@+id/gesturePaper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="12dp"
                app:layout_constraintTop_toBottomOf="@id/installedLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="보 제스처"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <!-- TextView로 드롭다운처럼 보이게 -->
                <TextView
                    android:id="@+id/paperTextView"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="제스처 선택"
                    android:textColor="@color/black"
                    android:background="@drawable/spinner_background"
                    android:gravity="center"/>
            </LinearLayout>


            <!-- ROCK -->
            <LinearLayout
                android:id="@+id/gestureRock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="12dp"
                app:layout_constraintTop_toBottomOf="@id/installedLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="주먹 제스처"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <!-- TextView로 드롭다운처럼 보이게 -->
                <TextView
                    android:id="@+id/rockTextView"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="제스처 선택"
                    android:textColor="@color/black"
                    android:background="@drawable/spinner_background"
                    android:gravity="center"/>
            </LinearLayout>


            <!-- SCISSORS -->
            <LinearLayout
                android:id="@+id/gestureScissors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="12dp"
                app:layout_constraintTop_toBottomOf="@id/installedLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="가위 제스처"
                    android:textColor="@color/black"
                    android:textSize="12sp" />


                <!-- TextView로 드롭다운처럼 보이게 -->
                <TextView
                    android:id="@+id/scissorsTextView"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="제스처 선택"
                    android:textColor="@color/black"
                    android:background="@drawable/spinner_background"
                    android:gravity="center"/>
            </LinearLayout>

            <!-- ONE -->
            <LinearLayout
                android:id="@+id/gestureOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="12dp"
                app:layout_constraintTop_toBottomOf="@id/installedLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="하나 제스처"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <!-- TextView로 드롭다운처럼 보이게 -->
                <TextView
                    android:id="@+id/oneTextView"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="제스처 선택"
                    android:textColor="@color/black"
                    android:background="@drawable/spinner_background"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/customGestureContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:divider="@android:color/darker_gray"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:showDividers="middle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/installedLabel" />

</androidx.constraintlayout.widget.ConstraintLayout>