<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingTop="40dp"
android:background="#E5E8F0">

<LinearLayout
    android:padding="10dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <!-- 앱 로고 + 타이틀 한 줄로 묶기 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingBottom="10dp">

        <!-- 앱 로고 -->
        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_launcher_foreground"
            android:transitionName="logo_transition"
            android:adjustViewBounds="true"
            android:layout_marginEnd="8dp"/>

        <!-- 타이틀 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Air Command"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold"/>
    </LinearLayout>


    <!-- 사용 중 섹션 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_box"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#F4F4F5"
        android:clipToPadding="false"
        android:elevation="1dp"
        android:layout_marginTop="8dp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/gestureicon"
            android:layout_marginEnd="10dp" />

        <TextView
            android:id="@+id/tvUseStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사용 안 함"
            android:textSize="12sp"
            android:textColor="#B45309"
            android:textStyle="bold"/>

        <Switch
            android:id="@+id/switchUse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <!-- 설명 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="에어 커맨드를 활용해 핸드폰을 터치 없이 제어할 수 있습니다."
        android:textColor="@color/black"
        android:textSize="11sp"
        android:paddingBottom="50dp"/>


    <!-- 제스처 기능 설정 -->
    <LinearLayout
        android:id="@+id/btnGestureSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_box"
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground">

        <!-- 아이콘 + 타이틀 수평 정렬 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/controlicon"
                android:layout_marginEnd="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제스처 기능 설정"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="12sp" />
        </LinearLayout>


        <!-- 설명 텍스트 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="새로운 제스처를 원하시면 하단 제스처 등록을 먼저 설정하세요."
            android:textSize="8sp"
            android:textColor="#9A3412" />
    </LinearLayout>


    <!-- 사용자 제스처 등록 -->
    <LinearLayout
        android:id="@+id/btnUserGesture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_box"
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground">

        <!-- 아이콘 + 타이틀 한 줄로 묶기 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/usericon"
                android:layout_marginEnd="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사용자 제스처 등록"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- 설명 텍스트 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="새로운 제스처를 등록할 수 있습니다."
            android:textSize="8sp"
            android:textColor="#9A3412" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_box"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginBottom="15dp"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/timericon"
            android:layout_marginEnd="10dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="백그라운드 자동 꺼짐"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="12sp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btnSelectTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="설정 안 함"
            android:backgroundTint="@android:color/transparent"
            android:textColor="#000000"
            android:drawableEnd="@drawable/ic_arrow_drop_down"
            android:padding="8dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:stateListAnimator="@null"
            android:elevation="0dp" />
    </LinearLayout>


    <Button
        android:id="@+id/btnTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="테스트"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="#BBE4BA"
        android:textColor="#000000"
        android:padding="12dp"
        android:textSize="16sp"
        android:textStyle="bold"/>


</LinearLayout>
</ScrollView>
